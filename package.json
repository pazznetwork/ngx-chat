{
  "name": "@pazznetwork/ngx-chat",
  "version": "0.15.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "append-with-ref": "echo '/// <reference path=\"xmpp-client.d.ts\" />' | cat - dist/pazznetwork/ngx-chat/public-api.d.ts > temp && mv temp dist/pazznetwork/ngx-chat/public-api.d.ts",
    "start": "ng build @pazznetwork/ngx-chat && ng serve",
    "clean": "rimraf out-tsc && rimraf dist && rimraf coverage && rimraf documentation",
    "compile": "tsc -p tsconfig.lib.json --noEmit --noImplicitAny",
    "build-lib": "npm run clean && ng build @pazznetwork/ngx-chat --configuration production",
    "build": "npm run build-lib && ng build ngx-chat-demo --stats-json --configuration production",
    "test": "ng test @pazznetwork/ngx-chat --watch",
    "test:once": "ng test @pazznetwork/ngx-chat --code-coverage --watch=false",
    "lint": "ng lint @pazznetwork/ngx-chat",
    "e2e": "ng e2e",
    "bundle-report": "webpack-bundle-analyzer dist/ngx-chat-demo/stats-es5.json",
    "documentation": "compodoc --tsconfig tsconfig.lib.json",
    "documentation:serve": "compodoc --tsconfig tsconfig.lib.json --serve --watch",
    "changelog": "conventional-changelog --infile CHANGELOG.md --same-file --preset angular --pkg package.json --release-count 0"
  },
  "keywords": [
    "ngx-chat",
    "xmpp",
    "angular",
    "chat",
    "component",
    "service",
    "library",
    "jabber"
  ],
  "peerDependencies": {
    "@types/ltx": "^3.0.2",
    "@xmpp/client": "^0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.9",
    "@angular/animations": "^15.2.9",
    "@angular/cdk": "^15.2.9",
    "@angular/cli": "^15.2.9",
    "@angular/common": "^15.2.9",
    "@angular/compiler": "^15.2.9",
    "@angular/compiler-cli": "^15.2.9",
    "@angular/core": "^15.2.9",
    "@angular/forms": "^15.2.9",
    "@angular/language-service": "^15.2.9",
    "@angular/platform-browser": "^15.2.9",
    "@angular/platform-browser-dynamic": "^15.2.9",
    "@angular/router": "15.2.9",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.3.6",
    "@compodoc/compodoc": "^1.1.19",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.10",
    "@types/node": "^12.11.7",
    "@types/xmpp__jid": "^1.3.3",
    "@types/xmpp__client": "^0.13.0",
    "@types/xmpp__events": "^0.13.0",
    "@types/xmpp__xml": "^0.13.1",
    "codelyzer": "^6.0.2",
    "concat-files": "^0.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "coveralls": "^3.0.14",
    "glob": "^7.1.7",
    "husky": "^1.1.4",
    "jasmine-core": "^3.99.1",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~6.3.20",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~4.0.2",
    "karma-jasmine-html-reporter": "^1.7.0",
    "ng-packagr": "^15.2.2",
    "protractor": "^7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.3",
    "typescript": "~4.8.4",
    "webpack-bundle-analyzer": "^3.6.1"
  },
  "typings": "dist/ngx-chat/index.d.ts",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
